<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sergio.blackjack.MainActivity"
    android:background="@drawable/fondomain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blackjack"
        android:id="@+id/textBlackjack"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="@dimen/text_title_margin_top"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/botonGo"
        android:layout_alignStart="@+id/botonGo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Counter"
        android:id="@+id/textCounter"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_below="@+id/textBlackjack"
        android:layout_alignRight="@+id/botonGo"
        android:layout_alignEnd="@+id/botonGo" />

    <ImageButton
        android:layout_width="@dimen/button_go_width"
        android:layout_height="@dimen/button_go_height"
        android:id="@+id/botonGo"
        android:background="@drawable/button_go"
        android:layout_marginTop="@dimen/button_go_margin_top"
        android:layout_below="@+id/textCounter"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
